<!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Login - <%= websiteTitle %></title>
        <link rel="stylesheet" href="LoginPage.css">
    </head>
    <body>
       <header>
           <%- include('./Partials/FormHeader.ejs') %>
       </header>
       <div class="empty-div">
       </div>
       <main>
           <div class="login-form-div">
                <div class="error-message-div">
                    <% if(userNotFoundError.length > 0) { %>
                        <div class="error-msg">
                            <h2 class="error-message"><%= userNotFoundError %></h2>
                        </div>
                    <% } %>
                </div>
               <div class="login-title">
                   <h1>Log In</h1>
               </div>
               <form class="login-form" action="/session/login" method="POST">
                    <div class="username-form">
                        <input class="username-input" type="text" placeholder="Enter your username" required name="usernameInput">
                    </div>
                    <div class="password-form">
                        <input class="password-input" type="password" placeholder="Enter your password" required name="passwordInput">
                    </div>
                    <div class="submit-btn">
                        <button class="submit-button">Login</button>
                    </div>
               </form>
               <p><a class="no-account-text" href="/register">Don't have an account?</a></p>
           </div>
       </main> 
       <footer>
           <%- include('./Partials/BottomNavBar.ejs') %>
       </footer>
    </body> 
</html>